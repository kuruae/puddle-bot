# Example environment variables for local development
# Copy this file to .env and fill in your actual values

# Discord Bot Configuration
DISCORD_TOKEN=your_discord_bot_token_here
CHANNEL_ID=123456789012345678

# Database: postgreSQL URL for production, SQLite for local dev,
# can be left empty/commented out for SQLite
DATABASE_URL=postgresql://username:password@localhost:5432/puddle_bot

# Bot Behavior
POLL_INTERVAL=2  # minutes between match checks
LANG=en          # default language (en, fr)
LOCALES_DIR=locales  # directory for translation files

# Optional: Logging
BOT_LOG_FILE=bot.log  # path to log file (for /logs command)
